{% extends 'base.html.twig' %}

{% block body %}

<p>{{ customMessage }}</p>

<table>
	<tr>
		<th>Company</th>
		<th>Title</th>
		<th></th>
	</tr>

	<tr>
		{% for offer in offers %}

			<tr>
				<td>{{ offer.company }}</td>
				<td>{{ offer.title }}</td>
				<td><a href="{{ url('offer_apply', {id: offer.id}) }}">Apply</a></td>
			</tr>
		{% endfor %}
	</tr>
</table> 

{% endblock %}